{
    "manifest_version": 2,
    "name": "Search Site WE",
    "version": "1.3",
    
	"description": "Search within the current subdomain or within the entire domain.",
	"icons": { "16": "icon16.png", "32": "icon32.png", "48": "icon48.png", "128": "icon128-96.png"	},

    "applications": { "gecko": { "id": "searchsite-we@DW-dev", "strict_min_version": "48.0" } },
    "permissions": [ "tabs", "webNavigation", "contextMenus", "notifications", "storage" ],
    
    "page_action": { "default_icon": { "16": "icon16.png" }, "default_title": "Search Site WE", "default_popup": "popup.html" },

    "background": { "scripts": [ "background.js", "publicsuffixlist.js" ] },
    "options_ui": { "page": "options.html" }
}
